
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
        
    <!--  This configuration is using Mock implementations of the services so we can 
          concentrate on the front end for this course.  -->    
        
    <!--  Service Beans -->  
    

    <bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="url" value="jdbc:mysql://localhost/dashboard3" />
        <property name="driverClassName" value="com.mysql.jdbc.Driver" />
        <property name="username" value="data" />
        <property name="password" value="store" />
    </bean>
    
    <bean id="sessionFactory"
              class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
        <property name="dataSource" ref="dataSource" />

        <property name="annotatedClasses">
            <list>
                <value>gov.bnl.racf.ps.dashboard3.objects.PsHost</value>
            </list>
        </property>

        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQLDialect</prop>
                <prop key="hibernate.show_sql">true</prop>
                <prop key="hibernate.hbm2ddl.auto">create</prop>
                <prop key="hibernate.cache.provider_class">org.hibernate.cache.EhCacheProvider</prop>
            </props>
        </property>
    </bean>
    
    <bean id="hibernateTemplate" class="org.springframework.orm.hibernate3.HibernateTemplate">
        <property name="sessionFactory" ref="sessionFactory" />
    </bean>
    
    <bean id="psHostDao" class="gov.bnl.racf.ps.dashboard3.dao.impl.PsHostDaoHibernateImpl">
        <property name="hibernateTemplate" ref="hibernateTemplate" />	
    </bean>  
    
    <bean id="ps2Json" class="gov.bnl.racf.ps.dashboard3.jsonconverter.impl.Ps2JsonSimpleImpl">
    </bean>
    
    
    
    <bean id="psHostsOperator" class="gov.bnl.racf.ps.dashboard3.operators.PsHostOperator">
        <property name="psHostDao" ref="psHostDao" />	
        <property name="ps2Json" ref="ps2Json" />
    </bean>   
</beans>
